<?xml version='1.0' encoding='utf-8'?>
<widget id="ca.edumedia.jian0084.movieapp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>movieapp-jian0084</name>
    <description>
        A movie recommendation app using API of movie database.
    </description>
    <author email="jian0084@algonquinlive.com" href="http://cordova.io">
        Joyce Jiang
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="3000" />
</widget>
